// Widget function declaration
function kWidget(x, y, width, height, widget-specific-arguments, ...)
{
	// Mandatory properties.
	this.x
	this.y
	this.width
	this.height
}

// Mandatory Methods
kWidget.prototype.draw = 
function(canvas)

// Optional Methods
kWidget.prototype.getActiveArea = 
function()
{
	return { x:this.x, y:this.y, width:this.width, height:this.height };
}


kWidget.prototype.onIdle = 
function(mouseX, mouseY)

kWidget.prototype.onHover = 
function(mouseX, mouseY)

kWidget.prototype.onClick = 
function(mouseX, mouseY)

kWidget.prototype.onDoubleClick = 
function(mouseX, mouseY)

kWidget.prototype.onDrag = 
function(startX, startY, currentX, currentY)

kWidget.prototype.onDragConclude = 
function(startX, startY, endX, endY)

kWidget.prototype.onPush = 
function(mouseX, mouseY)

kWidget.prototype.onKey = 
function(mouseX, mouseY, character)

kWidget.prototype.onFocus = 
function(mouseX, mouseY)

kWidget.prototype.onBlur = 
function(mouseX, mouseY)

